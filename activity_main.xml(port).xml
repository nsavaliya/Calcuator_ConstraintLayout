<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="right"
        android:hint="Calculation"
        android:textSize="40dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="right"
        android:hint="Result"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.0" />'

    <Button
        android:id="@+id/clear"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginLeft="5dp"
        android:backgroundTint="#595555"
        android:text="Clear"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/backspace"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:backgroundTint="#595555"
        android:text="backspace"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        />


    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/clr_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="clear,backspace"
        app:flow_wrapMode="chain"
        app:layout_constraintBottom_toTopOf="@+id/flow6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView3" />
   <Button
    android:id="@+id/seven"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:backgroundTint="#595555"
    android:text="7"
    android:textStyle="bold" />

    <Button
        android:id="@+id/eight"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:backgroundTint="#595555"
        android:text="8"
        android:textStyle="bold" />

    <Button
        android:id="@+id/nine"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:backgroundTint="#595555"
        android:text="9"
        android:textStyle="bold" />

    <Button
        android:id="@+id/division"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:backgroundTint="#595555"
        android:text="/"
        android:textStyle="bold" />

    <Button
        android:id="@+id/four"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:backgroundTint="#595555"
        android:text="4"
        android:textStyle="bold" />

    <Button
        android:id="@+id/five"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:backgroundTint="#595555"
        android:text="5"
        android:textStyle="bold" />

    <Button
        android:id="@+id/six"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:backgroundTint="#595555"
        android:text="6"
        android:textStyle="bold" />

    <Button
        android:id="@+id/multiply"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:backgroundTint="#595555"
        android:text="*"
        android:textStyle="bold" />

    <Button
        android:id="@+id/one"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:backgroundTint="#595555"
        android:text="1"
        android:textStyle="bold" />

    <Button
        android:id="@+id/two"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:backgroundTint="#595555"
        android:text="2"
        android:textStyle="bold" />

    <Button
        android:id="@+id/three"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:backgroundTint="#595555"
        android:text="3"
        android:textStyle="bold" />

    <Button
        android:id="@+id/substraction"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:backgroundTint="#595555"
        android:text="-"
        android:textStyle="bold" />

    <Button
        android:id="@+id/dot"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:backgroundTint="#595555"
        android:text="."
        android:textStyle="bold" />

    <Button
        android:id="@+id/zero"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:backgroundTint="#595555"
        android:text="0"
        android:textStyle="bold" />

    <Button
        android:id="@+id/equal"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:backgroundTint="#595555"
        android:text="="
        android:textStyle="bold" />

    <Button
        android:id="@+id/plus"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:backgroundTint="#595555"
        android:text="+"
        android:textStyle="bold" />


    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow6"
        android:layout_width="389dp"
        android:layout_height="407dp"
        android:orientation="horizontal"
        app:constraint_referenced_ids="seven,eight,nine,division,four,five,six,multiply,one,two,three,substraction,dot,zero,equal,plus"
        app:flow_horizontalGap="3dp"
        app:flow_verticalGap="3dp"
        app:flow_wrapMode="chain"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clr_back"
        app:layout_constraintVertical_bias="0.646" />


</androidx.constraintlayout.widget.ConstraintLayout>